        <Label x:Name="NoNetMonitText" Content="POCZEKAJ LUB ZAKOŃCZ" HorizontalAlignment="Left" Foreground="DarkRed" Margin="30,61,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="300" Height="45" FontSize="18"/>
        <Button x:Name="NoNetExitButton" Style="{StaticResource MyButton}" Background="DarkRed" Foreground="White" Content="ZAKOŃCZ" HorizontalAlignment="Left" Margin="30,133,0,0" VerticalAlignment="Top" Width="300" Height="45" FontSize="18" FontWeight="Bold" Click="NoNetExitButton_Click"/>
    </Grid>
